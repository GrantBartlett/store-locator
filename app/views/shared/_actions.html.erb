<div class="btn-group" role="group" aria-label="Edit User">
  <div class="btn-group">
    <%= link_to collection, :class => "btn btn-primary" do %>
    <i class="fa fa-eye fa-fw fa-lg" aria-hidden="true"></i>
    <% end %>

    <%= link_to path, :class => "btn btn-success" do %>
    <i class="fa fa-cog fa-fw fa-lg" aria-hidden="true"></i>
    <% end %>

    <%= link_to collection, method: :delete, data: { confirm: "Are you sure you wish to delete?" }, :class => "btn btn-danger" do %>
    <i class="fa fa-trash fa-fw fa-lg" aria-hidden="true"></i>
    <% end %>
  </div>
</div>
