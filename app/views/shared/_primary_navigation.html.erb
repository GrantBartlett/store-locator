<nav class="navbar navbar-default brand-nav">
  <div class="container">

    <% if yield(:brand_logo).empty? %>
    <div class="navbar-header">
      <a class="navbar-brand" href="<%= root_path %>">
        <%= image_tag 'brand-smswmedia.png', :class => 'brand-logo' %>
      </a>
    </div>
    <% else %>
    <%= yield(:brand_logo) %>
    <% end %>

    <% if logged_in? %>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav navbar-right">
        <li>
          <div class="avatar small"><%= gravatar_for current_user %></div>
        </li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
            <%= current_user.name %> <span class="caret"></span>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to "Home", root_path %></li>
            <li><%= link_to "Profile", user_path(current_user) %></li>
            <li><%= link_to "Brands", brands_path %></li>
            <li><%= link_to "Users", users_path %></li>
            <li><%= link_to "Log out", logout_path, method: :delete %></li>
          </li>
        </ul>
      </div>
    <% end %>
  </div>
</nav>
