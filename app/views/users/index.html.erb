<% content_for :header do %>
  <h1>Users</h1>
<% end %>

<% @users.each do |user| %>
  <div class="profile">
    Name: <%= user.name %> <%= gravatar_for user %> <br>
    Email: <%= user.email %> <br>
    Admin: <%= user.admin? %> <br>
  </div>

  <%= render 'actions', :user => user %>
  <hr>
<% end %>
