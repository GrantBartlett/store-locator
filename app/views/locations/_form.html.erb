<h4>Add locations</h4>
<%= form_for [@brand, @brand.locations.build] do |f| %>
<div class="form-group">
  <%= f.label :name %><br>
  <%= f.text_field :name , class: "form-control" %>
</div>

<div class="field">
  <%= f.label :lat %><br>
  <%= f.text_field :lat, class: "form-control" %>
</div>

<div class="field">
  <%= f.label :lng %><br>
  <%= f.text_field :lng, class: "form-control" %>
</div>

<div class="field">
  <%= f.label :content %><br>
  <%= f.text_field :content, class: "form-control" %>
</div>

<div class="actions">
  <%= f.submit class: "btn btn-success" %>
</div>
<% end %>
