<div class="btn-group" role="group" aria-label="Edit User">
  <div class="btn-group">

    <button class="btn btn-primary btn-xs" onclick="openInfoWindow(<%= counter %>);">
      <i class="material-icons">&#xE8F4;</i>
    </button>

    <%= link_to edit_brand_location_path(@brand, location.id), :class => "btn btn-success btn-xs" do %>
    <i class="material-icons">&#xE8B8;</i>
    <% end %>

    <%= link_to brand_location_path(@brand, location.id), method: :delete, data: { confirm: "Are you sure you wish to delete?" }, :class => "btn btn-danger btn-xs" do %>
    <i class="material-icons">&#xE92B;</i>
    <% end %>
  </div>
</div>
