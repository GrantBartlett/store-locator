<div class="btn-group" role="group" aria-label="Edit User">
  <div class="btn-group">
    <button class="btn btn-dark" onclick="openInfoWindow(<%= counter %>);">
      <%=t :find %> <i class="fa fa-location-arrow fa-fw fa-lg" aria-hidden="true"></i>
    </button>
    <% if is_admin? %>
    <%= link_to edit_brand_location_path(@brand, location.id), :class => "btn btn-success" do %>
      <i class="fa fa-cog fa-fw fa-lg" aria-hidden="true"></i>
    <% end %>
    <%= link_to brand_location_path(@brand, location.id), method: :delete, data: { confirm: "Are you sure you wish to delete?" }, :class => "btn btn-danger" do %>
      <i class="fa fa-trash fa-fw fa-lg" aria-hidden="true"></i>
    <% end %>
    <% end %>
  </div>
</div>
