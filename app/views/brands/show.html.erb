<div class="row">
  <div class="col-md-12">
    <h2><%= @brand.title %></h2>
    <p><%= @brand.description %></p>
    <hr>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <h3>Locations</h3>
    <%= render partial: @brand.locations, collection: @brand.locations, locals: {i: 0} %>

    <h3>Add a location</h3>
    <%= render partial: 'locations/form' %>
  </div>

  <div class="col-md-6">
    <h3>Map</h3>
    <%= render partial: 'brands/google_map' %>
  </div>
</div>
