<% content_for :header do %>
  <h1>Brands</h1>
<% end %>

<div class="row">
  <div class="col-md-12">

    <% @brands.each do |brand| %>
    <div class="media form-group">
      <div class="media-body">
        <h4 class="media-heading"><%= brand.title %></h4>
        <p><%= brand.description %></p>
        <div class="btn-group" role="group" aria-label="Basic example">
          <%= link_to "Show", brand, :class => "btn btn-default" %>
          <%= link_to "Edit", edit_brand_path(brand), :class => "btn btn-default"  %>
          <%= link_to "Remove", brand, method: :delete, data: { confirm: "Are you sure?" }, :class => "btn btn-default"  %>
        </div>
      </div>
    </div>
    <% end %>

    <div class="form-group">
      <%= link_to "Create New Brand", new_brand_path, :class => "btn btn-primary btn-lg" %>
    </div>
  </div>
</div>
