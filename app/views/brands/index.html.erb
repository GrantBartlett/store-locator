<h1>Brands</h1>

<% @brands.each do |brand| %>

Title: <%= brand.title %>
Logo: <%= brand.logo %> <br>
Url: <%= brand.url %> <br>
Description: <%= brand.description %> <br>
Brand created by: <%= link_to user_name(brand.user_id), user_path(brand.user_id) %>

<hr>
<%= link_to "Show", brand %>
<%= link_to "Edit", edit_brand_path(brand) %>
<%= link_to "Remove", brand, method: :delete, data: { confirm: "Are you sure?" } %>
<hr>
<% end %>

<%= link_to "New Brand", new_brand_path %>
